<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainpage_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.testapplication.wfcmainpage.activity.FacilitiesDetailsActivity">

    <TextView
        android:id="@+id/txtType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtType"
        android:background="@color/text_color" />

    <ImageView
        android:id="@+id/imgImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtType"
        android:layout_marginTop="@dimen/spacing_extra_small" />

    <TextView
        android:id="@+id/txtExtra"
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgImage"
        android:layout_marginTop="@dimen/spacing_extra_small"
        android:text="@string/extra_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtInfo"
        style="@style/TextDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtExtra"
        android:layout_marginBottom="@dimen/spacing_small" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtInfo"
        android:background="@color/text_color" />

    <TextView
        android:id="@+id/locatietext"
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInfo"
        android:layout_marginTop="@dimen/spacing_extra_small"
        android:text="@string/locatie" />

    <TextView
        android:id="@+id/towertext"
        style="@style/TextDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locatietext"
        android:text="@string/toren" />

    <TextView
        android:id="@+id/txtTower"
        style="@style/TextDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locatietext"
        android:layout_toRightOf="@+id/towertext" />

    <TextView
        android:id="@+id/etagetext"
        style="@style/TextDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTower"
        android:text="@string/mEtage" />

    <TextView
        android:id="@+id/txtFloor"
        style="@style/TextDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTower"
        android:layout_toRightOf="@+id/etagetext" />

    <TextView
        android:id="@+id/txtRoom"
        style="@style/TextDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFloor"
        android:layout_marginBottom="@dimen/spacing_small" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtRoom"
        android:background="@color/text_color" />

    <TextView
        android:id="@+id/meerInfo"
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRoom"
        android:layout_marginTop="@dimen/spacing_extra_small"
        android:text="@string/meer_info"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtSite"
        style="@style/TextDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meerInfo"
        android:layout_marginBottom="@dimen/spacing_small"
        android:autoLink="web" />

</RelativeLayout>