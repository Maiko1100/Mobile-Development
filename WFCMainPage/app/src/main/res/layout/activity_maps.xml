<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/buttonCar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_navigation_background"
            android:src="@drawable/ic_car"
            android:text="@string/start_navigation_button_text"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffd3d3d3" />

        <ImageButton
            android:id="@+id/buttonOV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_navigation_background"
            android:src="@drawable/ic_ov"
            android:text="@string/start_navigation_button_text"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffd3d3d3" />

        <ImageButton
            android:id="@+id/buttonWalk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_navigation_background"
            android:src="@drawable/ic_walk"
            android:text="@string/start_navigation_button_text"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffd3d3d3" />

        <ImageButton
            android:id="@+id/buttonBicycle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_navigation_background"
            android:src="@drawable/ic_bicycle"
            android:text="@string/start_navigation_button_text"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>