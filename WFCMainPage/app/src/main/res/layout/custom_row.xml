<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".FacilitiesActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:id="@+id/customImageView"
        android:src="@drawable/logowfcsmall"
        android:contentDescription="@string/customImage_view"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/customRowText_Medium"
        android:id="@+id/customRowText"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/customTextRow_Small"
        android:id="@+id/mediumRowText"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/customRowText"
        />

</RelativeLayout>