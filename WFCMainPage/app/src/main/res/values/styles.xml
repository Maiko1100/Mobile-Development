<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextDefault">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- Style InfoActionBar -->
    <style name="Theme.Info" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <!-- Set AppCompat’s color theming attrs -->
    <item name="colorPrimary">@color/info_light_color</item>
    <item name="colorPrimaryDark">@color/info_dark_color</item>
    <item name="actionBarStyle">@style/MyActionBar</item>
    <!-- Other attributes -->
    </style>

    <!-- Style NavActionBar -->
    <style name="Theme.Nav" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/nav_light_color</item>
        <item name="colorPrimaryDark">@color/nav_dark_color</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Other attributes -->
    </style>

    <!-- Style NavActionBar -->
    <style name="Theme.Rent" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/rent_light_color</item>
        <item name="colorPrimaryDark">@color/rent_dark_color</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Other attributes -->
    </style>

    <!-- Style NavActionBar -->
    <style name="Theme.Fac" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/fac_light_color</item>
        <item name="colorPrimaryDark">@color/fac_dark_color</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Other attributes -->
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
