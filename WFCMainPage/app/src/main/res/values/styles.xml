<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextDefault">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextMenuItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextHeader">
        <item name="fontFace">@string/font_futura_book</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/headerblack</item>
    </style>

    <style name="TextTitle">
        <item name="fontFace">@string/font_futura_light</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/headerblack</item>
    </style>

    <style name="WFCButtonMain" parent="android:Widget.Button">
        <item name="fontFace">@string/font_futura_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="WFCButtonNavigation" parent="android:Widget.Button">
        <item name="fontFace">@string/font_futura_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_navigation_background</item>
    </style>

    <!-- Style InfoActionBar -->
    <style name="Theme.Info" parent="AppTheme">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/info_light_color</item>
        <item name="colorPrimaryDark">@color/info_dark_color</item>
        <!-- Other attributes -->
    </style>

    <!-- Style NavActionBar -->
    <style name="Theme.Nav" parent="AppTheme">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/nav_light_color</item>
        <item name="colorPrimaryDark">@color/nav_dark_color</item>
        <!-- Other attributes -->
    </style>

    <!-- Style NavActionBar -->
    <style name="Theme.Rent" parent="AppTheme">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/rent_light_color</item>
        <item name="colorPrimaryDark">@color/rent_dark_color</item>
        <!-- Other attributes -->
    </style>

    <!-- Style NavActionBar -->
    <style name="Theme.Fac" parent="AppTheme">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/fac_light_color</item>
        <item name="colorPrimaryDark">@color/fac_dark_color</item>
        <!-- Other attributes -->
    </style>

</resources>
